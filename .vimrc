let mapleader =" "

set tabstop=4
set shiftwidth=2
noremap > >>
noremap < <<
set number
set autoindent
syntax on
set number relativenumber
set ttyfast

" Match the system's clipboard with vim's
set clipboard=unnamedplus

" Highlight the cursor line number
hi CursorLineNr guifg=#ffffff
set cursorline
set cursorlineopt=number
